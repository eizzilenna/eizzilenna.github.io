{
  "name": "portfolio",
  "private": true,
  "version": "1.0.0",
  "description": "Elizabeth Anne Wright",
  "author": "",
  "scripts": {
    "dev": "ecstatic ./static --port 9966 & chokidar 'src/*.elm' -c 'npm run build:client'",
    "build": "npm run build:css && npm run build:client && npm run build:html",
    "build:html": "elm-make ./src/Build.elm --output ./build/elm.js && node build",
    "build:client": "elm-make ./src/Main.elm --output ./static/index.js && uglifyjs ./static/index.js --compress --mangle --output ./static/index.min.js",
    "build:css": "cat ./node_modules/tachyons/css/tachyons.min.css ./node_modules/css-max-height-scale/css/css-max-height-scale.min.css > ./static/style.min.css",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "css-max-height-scale": "^1.0.6",
    "tachyons": "^4.7.4"
  },
  "devDependencies": {
    "chokidar-cli": "^1.2.0",
    "ecstatic": "^2.2.1",
    "elm": "^0.18.0",
    "fs-path": "0.0.23",
    "uglify-js": "^3.0.17"
  },
  "license": "ISC"
}
